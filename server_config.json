{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "MCP_3"
      ]
    },
    "research": {
      "command": "uv",
      "args": ["run", "MCP_3/server.py"]
    },
    "weather": {
      "command": "uv",
      "args": ["run", "MCP_3/weather_server.py"]
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    }
  }
}